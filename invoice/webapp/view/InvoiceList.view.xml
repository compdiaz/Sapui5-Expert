<mvc:View controllerName="ydiazs.invoice.controller.InvoiceList"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <m:List
        headerText="{i18n>invoiceListTitle}"
        class="sapUiResponsiveMargin"
        width="auto"
        items="{invoices>/Invoices}"
    >
        <m:items>
            <m:ObjectListItem
                title="{invoices>Quantity} x {invoices>ProductName}"
                number="{parts : [{path: 'invoices>ExtendedPrice'},
                                    {path: 'currency>/eur'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions : {showMeasure: false}
                                    }"

                                    numberUnit="{currency>/usd}"
                                    numberState="{= ${invoices>ExtendedPrice} > 9 ? 'Success' : 'Error'}"

            />
        </m:items>
    </m:List>
</mvc:View>
